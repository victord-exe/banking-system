# ==============================================================================
# Backend .env.example - Local Development
# ==============================================================================
# This file is for LOCAL DEVELOPMENT ONLY.
# For Docker, the root .env.docker file is used automatically.
# ==============================================================================

# Server Configuration
SERVER_PORT=8080

# PostgreSQL Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=banking_user
POSTGRES_PASSWORD=banking_password
POSTGRES_DB=banking_system
POSTGRES_DSN=postgresql://banking_user:banking_password@localhost:5432/banking_system?sslmode=disable

# TigerBeetle Configuration
TIGERBEETLE_HOST=localhost
TIGERBEETLE_PORT=3000
TIGERBEETLE_CLUSTER_ID=0

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION_HOURS=24

# OpenRouter / MCP (AI Chat)
OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet

# TigerBeetle System Accounts
SYSTEM_BANK_ACCOUNT_ID=1

# Application Settings
GIN_MODE=debug  # debug or release
LOG_LEVEL=info  # debug, info, warn, error
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
